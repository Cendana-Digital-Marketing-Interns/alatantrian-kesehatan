  <Features2
    title="Kantor Layanan"
    tagline="Temukan Kami"
    columns={2}
    items={[
      {
        title: 'Malang (Pusat)',
        description: 'Ruko Permata Griyashanta Blok NR. 24 25, Jl. Soekarno-Hatta, Malang, 65142',
      },
      {
        title: 'Depok',
        description: 'Jl. Raya PLN No. 95 Kel. Gandul, Kec. Cinere, Kota Depok, Provinsi Jawa Barat 16514',
      },
    ]}
  />
</Layout>
