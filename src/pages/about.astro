---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
// import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Tentang Kami"
    image={{
      src: '~/assets/images/antrian.jpg',
      alt: 'Kantor Alat Antrian',
    }}
  >
    <Fragment slot="title">
      Mitra Terpercaya Digitalisasi <br />
      <span class="text-accent dark:text-white"> Pelayanan Kesehatan Indonesia</span>
    </Fragment>

    <Fragment slot="subtitle">
      Kami berdedikasi untuk membantu Rumah Sakit, Puskesmas, dan Klinik dalam mengurai antrian dan meningkatkan
      kepuasan pasien melalui teknologi yang handal dan mudah digunakan.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Pencapaian Kami"
    stats={[
      { title: 'Tahun Pengalaman', amount: '10+' },
      { title: 'Klien Faskes', amount: '150+' },
      { title: 'Kota Jangkauan', amount: '34' },
      { title: 'Teknisi Berkualitas', amount: '10+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Nilai Utama Kami"
    subtitle="Prinsip yang kami pegang teguh dalam melayani setiap fasilitas kesehatan."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Inovasi Berkelanjutan',
        description:
          'Kami terus mengembangkan software antrian agar selalu kompatibel dengan update terbaru BPJS (Mobile JKN) dan regulasi Kemenkes.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Kualitas Hardware',
        description:
          'Menggunakan standar industri (Industrial Grade) untuk memastikan mesin kiosk tahan beroperasi 24 jam non-stop.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Layanan Responsif',
        description:
          'Dukungan teknis yang cepat tanggap adalah prioritas kami, karena kami paham pelayanan pasien tidak boleh terhenti.',
        icon: 'tabler:headset',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Sekilas Tentang Legalitas Perusahaan Kami"
    subtitle="PT. Cendana Teknika Utama berdiri tahun 1998 di Jawa Timur, dikukuhkan dengan Akta Pendirian Perusahaan di hadapan notaris Faisal A. Waber, SH. Penandatanganan oleh pejabat yang ditunjuk di hadapan notaris Faisal A. Waber, SH dilakukan pada tanggal 12 Agustus 1998."
    tagline="PT. Cendana Teknika Utama"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Steps2 Widget ****************** -->

